@model List<TicketsViewModel>
@{
    ViewBag.Title = "ViewMyTickets";
}

<h2>All Tickets</h2>

<!-- DataTales Example -->
<div class="card shadow mb-4">
    <div class="card-header py-3">

    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-striped table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>Project</th>
                        <th>Title</th>
                        <th>DateCreated</th>
                        <th>DateUpdated</th>
                        <th>Type</th>
                        <th>Status</th>
                        <th>Priority</th>
                        <th>Creator</th>
                        <th>Developer</th>
                        <th></th>

                    </tr>
                </thead>
                <tbody>
                    @foreach (var m in Model)
                    {
                        <tr>
                            <td>@m.Project.Name</td>
                            <td>@m.Title</td>
                            <td>@m.DateCreated</td>
                            @if (m.DateUpdated == null)
                            {
                                <td>Not Updated</td>
                            }
                            else
                            {
                                <td>@m.DateUpdated</td>
                            }
                            <td>@m.Type.Name</td>
                            <td>@m.Status.Name</td>
                            <td>@m.Priority.Name</td>
                            <td>@m.Creator.Name</td>
                            @if (m.AssignedDeveloper == null)
                            {
                                <td class="td-center">
                                    N/A
                                    <a href="@Url.Action(nameof(BugController.AssignTicket),"Bug",new {Id=m.Id })" title="Assign Developer">
                                        <i class="fas fa-user-plus"></i>
                                    </a>
                                </td>
                            }
                            else
                            {
                                <td class="td-center">
                                    @m.AssignedDeveloper.Name
                                <a href="@Url.Action(nameof(BugController.UnAssignTicket),"Bug",new {Id=m.Id })" title="Unassign Developer">
                                    <i class="fas fa-user-minus"></i>
                                </a>
                            </td>
                        }
                            <td class="td-center">
                                <a href="@Url.Action(nameof(BugController.EditTicket),"Bug",new {Id=m.Id })" title="Edit Ticket">
                                    <i class="fas fa-edit"></i>
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>