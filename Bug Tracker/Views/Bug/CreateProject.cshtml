@model CreateProjectViewModel
@{
    ViewBag.Title = "CreateProject";
}

<h2>Create Project</h2>
<form method="post" action="@Url.Action("CreateProject","Bug")">
    <div class="container">
        <div class="row">
            <div class="col-4">
                <div class="form-group">
                    @Html.LabelFor(m => m.Name, "Project Name:")
                    @Html.TextBoxFor(m => m.Name, new { @class = "form-control", placeholder = "Name" })
                    @Html.ValidationSummary("", new { @class = "text-danger" })
                    <button type="submit" class="btn btn-primary">Save</button>
                    <a href="@Url.Action("Index","Home")" class="btn btn-danger">Cancel</a>
                </div>
            </div>
            <div class="col-8">
                <label>Assign Members</label>
                <table class="table table-striped table-bordered">
                    <thead>
                        <tr>
                            <th>Name</th>
                            <th>Email</th>
                            <th>Assign</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var u in Model.Users)
                        {
                            <tr>
                                <td>@u.Name</td>
                                <td>@u.Email</td>
                                <td class="td-center">
                                    <input value="@u.Id" name="userIds" type="checkbox">
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</form>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}



