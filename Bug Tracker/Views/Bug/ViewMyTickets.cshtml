@model List<ViewMyTicketsViewModel>
@{
    ViewBag.Title = "ViewMyTickets";
}

<h2>ViewMyTickets</h2>

<!-- DataTales Example -->
<div class="card shadow mb-4">
    <div class="card-header py-3">
        @if (User.IsInRole(nameof(UserRoles.Admin)) || User.IsInRole(nameof(UserRoles.ProjectManager)))
        {
            <a href="@Url.Action(nameof(BugController.CreateTicket), nameof(BugController))" title="Create New Ticket">
                <i class="fas fa-plus"></i>
                Create New Ticket
            </a>
        }
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-striped table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>Title</th>
                        <th>DateCreated</th>
                        <th>DateUpdated</th>
                        <th>Project</th>
                        <th>Type</th>
                        <th>Priority</th>
                        <th>Status</th>
                        <th>Creator</th>
                        <th>AssignedDeveloper</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var m in Model)
                    {
                    <tr>
                        <td>@m.Title</td>
                        <td>@m.DateCreated</td>
                        @if (m.DateUpdated == null)
                        {
                            <td>Not Updated</td>
                        }
                        else
                        {
                            <td>@m.DateUpdated</td>
                        }
                        <td>@m.Project.Name</td>
                        <td>@m.Type.Name</td>
                        <td>@m.Priority.Name</td>
                        <td>@m.Status.Name</td>
                        <td>@m.Creator.Name</td>
                        @if (m.AssignedDeveloper == null)
                        {
                            <td>Not Assigned</td>
                        }
                        else
                        {
                            <td>@m.AssignedDeveloper.Name</td>
                        }
                    </tr>
                        }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>