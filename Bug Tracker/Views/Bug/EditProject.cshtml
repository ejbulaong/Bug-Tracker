@model EditProjectViewModel
@{
    ViewBag.Title = "EditProject";
}

<h2>Edit Project</h2>

<form method="post" action="@Url.Action("EditProject","Bug",new {id=Model.Id })">
    @Html.ValidationSummary("", new { @class = "text-danger" })
    <div class="container">
        <div class="row">
            <div class="col-6">
                <div class="form-group">
                    <div class="form-group">
                        @Html.LabelFor(m => m.Name, "Project Name:")
                        @Html.TextBoxFor(m => m.Name, new { @class = "form-control", placeholder = "Name" })
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(m => m.Details, "Project Details:")
                        @Html.TextAreaFor(m => m.Details, new { @class = "form-control", placeholder = "Details" })
                    </div>
                    <button type="submit" class="btn btn-primary">Submit</button>
                    <a href="@Url.Action("Index","Bug")" class="btn btn-danger">Cancel</a>
                </div>
            </div>
        </div>
    </div>
</form>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

