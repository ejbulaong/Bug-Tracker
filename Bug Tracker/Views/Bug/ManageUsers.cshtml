@model List<ManageUsersViewModel>
@using Bug_Tracker.Enums;
@{
    ViewBag.Title = "ManageUsers";
}

<h2>Manage Users</h2>

<!-- DataTales Example -->
<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">User's Information</h6>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-striped" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>Email</th>
                        <th>Current Role</th>
                        <th>Choose a new Role</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var m in Model)
                    {
                        <form method="post" enctype="multipart/form-data" action="@Url.Action("ManageUsers","Bug",new { id = m.Id})">
                            <tr>
                                <td>@m.Name</td>
                                <td>@m.UserName</td>
                                @foreach (var r in m.Role)
                                {
                                    <td>@r</td>
                                }
                                <td>
                                    <select class="form-control form-control-sm" name="newRole">
                                        <option value="none" selected>Please choose a role</option>
                                        <option>@nameof(UserRoles.Admin)</option>
                                        <option>@nameof(UserRoles.ProjectManager)</option>
                                        <option>@nameof(UserRoles.Developer)</option>
                                        <option>@nameof(UserRoles.Submitter)</option>
                                    </select>
                                </td>
                                <td>
                                    <button type="submit" class="btn btn-primary">Save</button>
                                </td>
                            </tr>
                        </form>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
